---
layout: home
permalink: "/chapters-ja-jp/"
eleventyImport:
  collections: ["language_repo_ja","language_repo_i18n"]
---
{%- from './_includes/macros/chapterversion-menu-item-individual-language.njk' import chapterVersionMenuItemIndividualLanguage -%}

<div>
    <div style="display:grid;float:left;margin:160px 0 0 96px;height:182px; width:122px;min-width:122px;">
        <center>
        <img width="121px" height="182px" src='../assets/favicons/bookcover_small.png'>
        </center>
    </div>
    <div style="display:grid;float:left;margin:196px 0 0 64px;height:182px; width:600px;min-width:500px;">
        <h2 style="font-size:48px">
        <span style="color:red">P </span><span style="color:orange">L </span><span style="color:green">U </span><span style="color:#1e90ff">R </span><span style="color:white">A </span><span style="color:#1e90ff">L </span><span style="color:green">I </span><span style="color:orange">T </span><span style="color:red">Y</span>
        </h2>
        <H2 style="font-size:24px;font-family: Jost;">The Future of Collaborative Technology and Democracy</H2>
<div style="display:inline-block;">
    </div>
    </div>
</div>

<div>
    <div style="display:grid;float:left;padding-left:calc(var(--padding-step-4)*2);padding-right:calc(var(--padding-step-4)*2);font-size:24px;font-family:Jost;">
    placeholder 1
    {% readdynamiccodeRender 'https://raw.githubusercontent.com/pluralitybook/plurality/main/contents/traditional-mandarin/0-3-致謝.md' %}
    </div>
    <div style="display:grid;float:left;padding-left:calc(var(--padding-step-4)*2);padding-right:calc(var(--padding-step-4)*2);font-size:24px;font-family:Jost;">
    placeholder 2
    {% readdynamiccodeRender 'https://raw.githubusercontent.com/pluralitybook/plurality/main/contents/english/0-3-credits.md' %}
    </div>
    <div style="display:grid;float:left;padding-left:calc(var(--padding-step-4)*2);padding-right:calc(var(--padding-step-4)*2);font-size:24px;font-family:Jost;">
    placeholder 3
    </div>
    <div style="display:grid;float:left;padding-left:calc(var(--padding-step-4)*2);padding-right:calc(var(--padding-step-4)*2);font-size:24px;font-family:Jost;">
    placeholder 4
    </div>
</div>

<table>
<tr>
<td valign="top">
<div id="version-menu">
  <ol id="version-ol">
    <div>
{% for repo in language_repo_i18n %}
{% if ((repo.id) == 'ja') %}
{% if ((repo.upperpart_id) == '.') %}
    </div>
          <li style="font-size:40px;padding:0 28px;">Section {{ repo.upperpart_text }}</li>
    <div>
{% elseif ((repo.upperpart_id) != '') %}
    </div>
          <li style="font-size:40px;padding:0 28px;">{{ repo.upperpart_text }}</li>
    <div>
{% endif %}

        {{ chapterVersionMenuItemIndividualLanguage(
          githubLink = repo.githubLink,
          pageTitle = repo.urls.id_of_part,
          subtitleTranslated = repo.urls.name_of_part,
          pageUrl = "/v/parts/" + repo.urls.id_of_part + "/" + repo.id,
          language = repo.name,
          chapterid_subid = repo.urls.id_of_part)
        }}
{% endif %}
{% endfor %}

</div>
</td>
</tr>
</table>
{% if language_repo_ja.length > 0 %}
  <p>Number of Repositories: {{ language_repo_ja.length }}</p>
  <table>
    {% for repo in language_repo_ja %}
      <a href="/v/chapters/{{ repo.id_of_part }}/ja" target="_blank">{{repo.id_of_part}} : {{repo.name_of_part}}</a>
    {% endfor %}
  </table>
{% else %}
    <p>No language repository data to display</p>
{% endif %}

<div id="language_config">language_config</div>
{% for repo in language_repo_i18n %}
<div>
{{ repo.id }} / {{ repo.name }} / ({{repo.upperpart_id}}x{{repo.upperpart_text}}) / <a href="/v/parts/{{ repo.urls.id_of_part }}/{{repo.id}}" target="_blank">{{repo.urls.id_of_part}} : {{repo.urls.name_of_part}}</a>
<! -- {{ repo.urls.name }} -/- {{ repo.urls.name.id_of_part[0] }} -->
</div>
{% endfor %}

{% include "partials/footer.njk" %}